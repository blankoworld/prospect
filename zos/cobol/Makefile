all: build

build: DCLCON DCLPRO TLMBPGM3 TLMCCON2 TLMCPIL TLMCPIL3 TLMCPRO1 TLMPCON2 TLMPPRO1

# COBOL
TLMBPGM3 TLMPCON2 TLMPPRO1 TLMLPRO1:
	@unix2dos -n "$@.cbl" $@

# COPY
DCLCON DCLPRO TLMCCON2 TLMCPIL TLMCPIL3 TLMCPRO1:
	@unix2dos -n "$@.cpy" $@

clean:
	@rm -f DCLCON DCLPRO TLMBPGM3 TLMCCON2 TLMCPIL TLMCPIL3 TLMCPRO1 TLMPCON2 TLMPPRO1 TLMLPRO1
